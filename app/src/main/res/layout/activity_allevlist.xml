<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ALLEVList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".All_Leads">

        <!--        <include-->
        <!--            android:id="@+id/toolbar"-->
        <!--            layout="@layout/toolbar" />-->


        <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#343341"
            android:outlineSpotShadowColor="#343341"
            android:outlineAmbientShadowColor="#343341"
            android:elevation="4dp"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/user_image"
                    android:gravity="end"
                    app:cardCornerRadius="35dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/userName"
                    android:layout_marginLeft="-50dp"
                    >

                    <ImageView
                        android:id="@+id/account"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="centerCrop"
                        >
                    </ImageView>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignLeft="@id/userName"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"

                    android:padding="16dp"
                    android:text="All Stations"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/dishes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/edittext_background"

                app:iconifiedByDefault="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:queryHint="Search lead..." />


            <LinearLayout
                android:visibility="gone"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dead Leads : "/>
                <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:id="@+id/leadrealcount"/>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/ss"
/>



            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/speed"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Speed"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_background"
                    />

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rating"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_background"
                    />

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_background"
                    />
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/nearby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Near By"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textAlignment="center"
                    android:background="@drawable/edittext_background"
                    />



            </LinearLayout>




            <!-- TODO: Update blank fragment layout -->
            <androidx.recyclerview.widget.RecyclerView

                android:padding="10dp"
                android:id="@+id/recycler_for_dishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/searchView"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchView"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>


    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>